{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "out",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "baseUrl": "src/"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}